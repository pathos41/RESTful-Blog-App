<%- include("./partials/header") %>
<div class="ui main text container segment">
	<div class="ui huge header" id="new-blog">New Blog</div>
	<form class="ui form" action="/blogs" method="POST">
		<div class="field">
			<label>Title</label>
			<input type="text" name="blog[title]" placeholder="title" required>
		</div>
		<div class="field">
			<label>Image</label>
			<input type="text" name="blog[image]" placeholder="image" required>
		</div>
		<div class="field">
			<label>Blog Content</label>
			<textarea name="blog[body]" placeholder="Content goes here.." required></textarea>
		</div>
		<button class="ui teal big basic button">Submit</button>
		<a href="/" class="ui teal big basic button cancel-btn">Cancel</a>
	</form>
</div>
<%- include("./partials/footer") %>