<%- include("./partials/header") %>
<div class="ui main text container segment">
	<div class="ui huge header" id="edit-blog">Edit <%= blog.title %></div>
	<form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
		<div class="field">
			<label>Title</label>
			<input type="text" name="blog[title]" value="<%= blog.title %>" required>
		</div>
		<div class="field">
			<label>Image</label>
			<input type="text" name="blog[image]" value="<%= blog.image %>" required>
		</div>
		<div class="field">
			<label>Blog Content</label>
			<textarea name="blog[body]" required><%= blog.body %></textarea>
		</div>
		<button class="ui teal big basic button">Submit</button>
		<a href="/blogs/<%= blog._id %>" class="ui teal big basic button cancel-btn">Cancel</a>
	</form>
</div>
<%- include("./partials/footer") %>